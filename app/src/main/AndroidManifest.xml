<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.root.experimentassistant">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_OWNER_DATA" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirstLevel.Experiment"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondLevel.LoginActivity" />
        <activity android:name=".SecondLevel.RegisterActivity" />
        <activity android:name=".SecondLevel.ExperDetailActivity" />
        <activity android:name=".MyView.LoadingFailedActivity" />
        <activity android:name=".SecondLevel.ModifyPasswordActivity" />
        <activity android:name=".SecondLevel.CourseDetailActivity" />
        <activity android:name=".ThirdLevel.ForgetPasswordActivity" />
        <activity android:name=".ThirdLevel.StepActivity" />
        <activity
            android:name=".ThirdLevel.TakePhotoActivity"
            android:theme="@style/MyDialogStyleBottom" />
        <activity android:name=".SecondLevel.MyCourseActivity" />
        <activity android:name=".SecondLevel.HistoryCourseActivity" />
        <activity android:name=".SecondLevel.MyScoreActivity" />
        <activity android:name=".MyView.ImageShowActivity"></activity>
    </application>

</manifest>