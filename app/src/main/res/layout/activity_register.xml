<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.root.experimentassistant.SecondLevel.RegisterActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/registerCancle"
            style="@style/cancleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon" />

        <TextView
            style="@style/menuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册"
            android:textColor="#ffffff" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="注 册"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <EditText
                    android:id="@+id/regName"
                    style="@style/smallText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:drawableLeft="@drawable/reg_name"
                    android:drawablePadding="12dp"
                    android:hint="请输入姓名"
                    android:inputType="text"
                    android:maxLength="10" />

                <ImageView
                    android:id="@+id/reg_name_delete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/cancle"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <EditText
                    android:id="@+id/regId"
                    style="@style/smallText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:drawableLeft="@drawable/reg_id"
                    android:drawablePadding="12dp"
                    android:hint="请输入你的学号"
                    android:inputType="number"
                    android:maxLength="10" />

                <ImageView
                    android:id="@+id/reg_id_delete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/cancle"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <EditText
                    android:id="@+id/regPass1"
                    style="@style/smallText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:drawableLeft="@drawable/reg_pass"
                    android:drawablePadding="12dp"
                    android:hint="设置登录密码"
                    android:inputType="textPassword"
                    android:maxLength="30" />

                <ImageView
                    android:id="@+id/reg_pass1_delete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/cancle"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <EditText
                    android:id="@+id/regPass2"
                    style="@style/smallText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:drawableLeft="@drawable/reg_pass"
                    android:drawablePadding="12dp"
                    android:hint="请再次填写密码"
                    android:inputType="textPassword"
                    android:maxLength="30" />

                <ImageView
                    android:id="@+id/reg_pass2_delete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/cancle"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <EditText
                    android:id="@+id/regPhone"
                    style="@style/smallText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:drawableLeft="@drawable/reg_phone"
                    android:drawablePadding="12dp"
                    android:hint="填写11位数字手机号码"
                    android:inputType="phone"
                    android:maxLength="15" />

                <ImageView
                    android:id="@+id/reg_phone_delete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/cancle"
                    android:visibility="gone"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/vertifyCode"
                        style="@style/smallText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext"
                        android:drawableLeft="@drawable/reg_key"
                        android:drawablePadding="12dp"
                        android:hint="填写手机验证码"
                        android:inputType="number"
                        android:maxLength="6" />

                    <ImageView
                        android:id="@+id/reg_code_delete"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/cancle"
                        android:visibility="gone"/>
                </FrameLayout>

                <Button
                    android:id="@+id/regVertifyBtn"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/vertifyCode"
                    android:background="@drawable/rec_btn_white"
                    android:text=" 获取验证码 " />
            </LinearLayout>

            <Button
                android:id="@+id/regBtn"
                style="@style/btnTextSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/rec_btn_select"
                android:text="注  册" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>